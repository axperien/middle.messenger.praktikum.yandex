<div class="message message--{{ from }}">
    <div class="message__box">
        {{#if text }}
            <div class="message__text">{{ text }}</div>
        {{/if}}
        {{#if image }}
            <div class="message__image">
                <img src="{{ image }}" alt="">
            </div>
        {{/if}}
        <div class="message__time">{{ time }}</div>
    </div>    
</div>