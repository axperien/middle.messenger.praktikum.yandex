{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean-dist": "rm -rf dist && mkdir dist",
    "copy-images": "cp -vR ./static/images ./dist",
    "copy-netlify-redirect": "cp -vR ./static/_redirects ./dist",
    "init": "npm run clean-dist && npm run copy-images && npm run copy-netlify-redirect",
    "start": "npm run build && node server.js",
    "build": "npm run init && parcel build static/index.html",
    "dev": "npm run init && parcel static/index.html -p 3000 --no-cache --open chrome"
  },
  "devDependencies": {
    "@parcel/config-default": "^2.4.1",
    "@parcel/resolver-default": "^2.5.0",
    "@parcel/resolver-glob": "^2.4.1",
    "@parcel/transformer-sass": "^2.4.1",
    "autoprefixer": "^9.8.6",
    "express": "^4.17.3",
    "parcel": "^2.4.1",
    "postcss": "^8.4.12",
    "postcss-modules": "^4.3.1",
    "sass": "^1.50.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "handlebars": "^4.7.7",
    "nanoid": "^3.3.4"
  }
}
