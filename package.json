{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "",
  "browserslist": "> 0.25%, last 2 versions, not dead",
  "staticFiles": {
    "staticPath": "static",
    "staticOutDir": "dist"
  },
  "engines": {
    "node": "~16.13.1"
  },
  "scripts": {
    "eslint": "eslint **/*.ts --fix",
    "stylelint": "stylelint '**/*.{css,scss}'",
    "stylelint:fix": "stylelint '**/*{css,scss}' --fix",
    "start": "npm run production && npm run server",
    "server": "node server.js",
    "build": "webpack --config configuration/webpack.dev.config.js --mode=development",
    "dev": "webpack serve --config configuration/webpack.dev.config.js --mode=development",
    "production": "webpack --config configuration/webpack.prod.config.js --mode=production",
    "test": "mocha --require ts-node/register src/**/*.test.ts",
    "docker:build": "docker buildx build --platform linux/amd64 -t yandex-messenger .",
    "docker:run": "docker run -d -p 3000:3000 yandex-messenger",
    "docker:stop": "docker stop $(docker ps -q --filter ancestor=yandex-messenger)",
    "deploy": "heroku container:push web && heroku container:release web"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all --parallel test eslint"
    }
  },
  "devDependencies": {
    "@types/chai": "~4.3.1",
    "@types/mocha": "~9.1.1",
    "@typescript-eslint/eslint-plugin": "~5.23.0",
    "@typescript-eslint/parser": "~5.23.0",
    "autoprefixer": "~9.8.6",
    "chai": "~4.3.6",
    "chai-http": "~4.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^4.0.0",
    "eslint": "~8.15.0",
    "eslint-config-airbnb": "~19.0.4",
    "eslint-plugin-import": "~2.26.0",
    "express": "~4.17.3",
    "global-jsdom": "8.4.0",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "image-minimizer-webpack-plugin": "^3.2.3",
    "jsdom": "19.0.0",
    "mini-css-extract-plugin": "^2.6.0",
    "mocha": "~10.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "~8.4.12",
    "postcss-loader": "^7.0.0",
    "postcss-modules": "~4.3.1",
    "sass": "~1.50.0",
    "sass-loader": "^13.0.0",
    "stylelint": "~14.8.2",
    "stylelint-config-prettier": "~9.0.3",
    "stylelint-config-rational-order": "~0.1.2",
    "stylelint-config-standard": "~25.0.0",
    "stylelint-order": "~5.0.0",
    "stylelint-prettier": "~2.0.0",
    "stylelint-scss": "~4.2.0",
    "ts-loader": "^9.3.0",
    "ts-node": "~10.8.1",
    "typescript": "~4.6.4",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "handlebars": "~4.7.7",
    "nanoid": "~3.3.4"
  }
}
